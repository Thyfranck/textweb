<div class="navbar navbar-fluid-top navbar-inverse">
  <div class="navbar-inner sharp-ended">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <%= link_to current_user.present? ? home_schools_path : root_path, :class => "brand" do %>
        <span style="color: green">C</span>ourse <span style="color: lightblue">L</span>inks
      <% end %>

      <div class="nav-collapse">
        <ul class="nav">
          <li>
            <div class="slogan">Learn more</div>
          </li>
        </ul>
      </div>

      <div class="nav-collapse pull-right">
        <ul class="nav">
          <% if current_user %>
            <li>
              <%= link_to current_user.name, current_user %>
            </li>
            <li>
              <%= link_to "Logout", logout_path  %>
            </li>
          <% else %>
            <li>
              <%= link_to "Log in", login_path  %>
            </li>
            <li>
              <%= link_to "Sign up", signup_path  %>
            </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
